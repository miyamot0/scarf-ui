{
    "parser": "@babel/eslint-parser",
    "extends": ["eslint:recommended", "next/core-web-vitals"],
    "ignorePatterns": [
        "node_modules/",
        ".next/",
        "**/__tests__/**",
        "components/ui/"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "no-undef": "off",
        "no-case-declarations": "warn"
    }
}
